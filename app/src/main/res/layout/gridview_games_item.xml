<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="192dp"
    android:id="@+id/gridview_games_layout"
    android:background="@color/color_background_blue2"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gridview_games_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/temp_duzhuo"/>
    <TextView
        android:id="@+id/gridview_games_text"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/color_text1_white"
        android:maxLines="1"
        android:text="@string/test"/>
</LinearLayout>
