<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_blue">

    <RelativeLayout
        android:id="@+id/appsettings_relative_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="@string/settings"
            android:textColor="@color/color_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/appsettings_relative_content"
        android:layout_below="@+id/appsettings_relative_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="180dp">
        <Button
            android:id="@+id/appsettings_but1"
            android:layout_width="200dp"
            android:layout_height="248dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_settingwifi_selector"/>
        <Button
            android:id="@+id/appsettings_but2"
            android:layout_width="200dp"
            android:layout_height="248dp"
            android:layout_toRightOf="@+id/appsettings_but1"
            android:background="@drawable/button_settingtime_selector"/>
    </RelativeLayout>

</RelativeLayout>